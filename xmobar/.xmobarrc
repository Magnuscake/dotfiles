-- Thanks to krive001 to share the code of xmobar
-- https://github.com/krive001/xmonad-xmobar

Config { font = "xft:TerminessTTF Nerd Font:size=13:style=Regular"
       , additionalFonts = [ "xft:Noto Sans:size=11:style=Light"
                           , "xft:FontAwesome:style=Regular:size=13"
                           ]

       , bgColor          = "#282c34"
       , fgColor          = "white"
       , position         = TopSize C 100 25
       , textOffset       = -1
       , iconOffset       = -8
       , alpha            = 255
       , border           = BottomB
       , borderWidth      = 0
       , borderColor      = "#c0c5ce"
       , lowerOnStart     = True
       , hideOnStart      = False
       , allDesktops      = True
       , overrideRedirect = True
       , pickBroadest     = True
       , persistent       = True
       , sepChar          = "%"
       , alignSep         = "}{"
       , template         = " <fc=white><fn=0><action=button=4><action=button=5>%UnsafeStdinReader%</action></action></fn></fc>}{<fc=white> %update% <fn=2>  </fn></fc> %kbd%  %multicpu%  %memory%  <action=`pavucontrol` button=3><action=`XMMute` button=1><action=button=4><action=button=5>%XVol%</action></action></action></action>  %battery%  <action=`gsimplecal` button=1> %date% </action>"

   , commands     = [ Run MultiCpu          -- [ "--template" , "<fc=white><fn=2>  </fn></fc><fc=white></fc><total> %"
                                            [ "--template" , "<fc=white><fn=0> CPU: </fn></fc><fc=white></fc><total> %"
                                            , "--Low"      , "50"        -- units: %
                                            , "--High"     , "85"        -- units: %
                                            , "--low"      , "#ffffff"
                                            , "--normal"   , "#ffffff"
                                            , "--high"     , "#fd0537"
                                            ] 10

                    , Run Battery           [ "--template" , "<acstatus>"
                                            , "--Low"      , "25"        -- units: %
                                            , "--High"     , "80"        -- units: %
                                            , "--low"      , "#d50000"
                                            , "--normal"   , "darkorange"
                                            , "--high"     , "#66bb6a"
                                            , "--" -- battery specific options
                                                -- discharging status
                                              , "-l"	, "#d50000"
                                              , "-m"  , "darkorange"
                                              , "-h"  , "#66bb6a"
                                              , "-o"	, "<left>%"
                                                -- AC "on" status
                                              , "-O"	, "<left>%"
                                                -- charged status
                                              , "-i"  , "Charged"
                                              , "-a", "notify-send -u critical 'Battery running out!'"
                                              , "-A", "20"
                                            ] 50

--                    , Run CoreTemp          [ "--template" , "<fc=white><fn=2>  </fn></fc><fc=green></fc><core0> °C"
--                                            , "--Low"      , "2"         -- units: °C
--                                            , "--High"     , "80"        -- units: °C
--                                            , "--low"      , "#ffffff"
--                                            , "--normal"   , "#ffffff"
--                                            , "--high"     , "#fd0537"
--                                            ] 10

                    -- , Run Memory            [ "--template" ,"<fc=white><fn=2> </fn></fc><fc=white></fc><usedratio> %"
                    , Run Memory            [ "--template" ,"<fc=white><fn=0>MEM: </fn></fc><fc=white></fc><usedratio> %"
                                            ] 10

--                  , Run Wireless          "wlp0s20u2u3"        ["-t", "<fc=green>Wifi:</fc> <quality>"
--                                          ] 10

                    , Run Com "/bin/bash"   ["-c", "XMgetvolume"]  "XVol" 10


                    , Run Kbd               [ ("be" , "<fc=#FFFFFF>BE</fc>")
                                            , ("us" , "<fc=#FFFFFF>US</fc>")
                                            ]

                    , Run UnsafeStdinReader

                    , Run Com "/bin/bash"   ["-c",  "XMKupdate"] "update" 600

                    , Run Date              "%d:%m:%Y  %I:%M %p" "date" 60]

}
